{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust Program (sudo)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/edbgserver",
            "args": [
                "-b",
                "edbgserver-cli/tests/test_target/test_target"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/rust-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cargo build",
            "debugServerArgs": "",
            "serverStarted": "gdb",
            "launchCompleteCommand": "exec-run",
            "linux": {
                "MIMode": "gdb",
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
            },
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "sudo",
                "pipeArgs": [
                    "-S",
                    "/usr/bin/rust-gdb",
                    "--interpreter=mi"
                ],
                "debuggerPath": "/usr/bin/rust-gdb"
            }
        }
    ]
}